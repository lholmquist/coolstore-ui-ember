<li class="flex justify-between gap-x-6 py-5">
  <div class="flex min-w-0 gap-x-4">
    <img class="h-12 w-12 flex-none rounded-full bg-gray-50" src="/images/{{@cartItem.itemId}}.jpg" alt="{{@cartItem.name}}">
    <div class="min-w-0 flex-auto">
      <p class="text-sm font-semibold leading-6 text-gray-900">{{@cartItem.name}}</p>
      <p class="mt-1 truncate text-xs leading-5 text-gray-500">Quantity: {{@cartItem.quantity}}</p>
    </div>
  </div>
  <div class="hidden shrink-0 sm:flex sm:flex-col sm:items-end">
    <p class="text-sm leading-6 text-gray-900">
      <button type="button" {{on "click" (fn @removeItem @cartItem)}}>Remove</button>
    </p>
  </div>
</li>
