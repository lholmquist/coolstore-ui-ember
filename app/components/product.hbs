<div class="group">
  <div class="aspect-h-1 aspect-w-1 w-full overflow-hidden rounded-lg bg-gray-200 xl:aspect-h-8 xl:aspect-w-7">
    <img src="/images/{{@product.image}}" alt="{{@product.desc}}" class="h-full w-full object-cover object-center group-hover:opacity-75">
  </div>
  <h3 class="mt-4 text-sm text-gray-700">{{@product.desc}}</h3>
  <p class="mt-1 text-lg font-medium text-gray-900">{{currency @product.price}}</p>
  <label for="quan">Quantity</label>
  <select id="quan" name="quan" {{on 'change' this.changeSelect}}>
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5">5</option>
  </select>
  <div>
    <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" type="button" {{on "click" (fn this.addToCart @product)}}>Add To Cart</button>
  </div>
</div>
